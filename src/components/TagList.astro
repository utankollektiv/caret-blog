---
// * import Link from "./Link.astro";

type Props = {
  tags: string[];
};

const { tags } = Astro.props;
// * <Link url={`/blog/${tag}`}>{tag}</Link>
---

{
  tags.length > 0 ? (
    <ul class="flex flex-wrap gap-2">
      {tags.map((tag) => (
        <li class="text-sm text-nord-1 dark:text-nord-8 ">{tag}</li>
      ))}
    </ul>
  ) : null
}
