---
import { ViewTransitions } from "astro:transitions";

import Utan from "../components/Utan.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body
    class="mb-24 bg-nord-6 text-nord-0 transition-colors duration-300 dark:bg-nord-0 dark:text-nord-6"
  >
    <main>
      <header class="mb-4 flex justify-between px-4 py-2">
        <h1 class="text-xl">
          <a class="transition-colors dark:hover:text-nord-8" href="/">
            <Utan>^[utan]*</Utan>
          </a>
        </h1>
        <a href="/blog" class="text-nord-6 transition-colors hover:text-nord-8">
          <Utan>^blog</Utan>
        </a>
      </header>
      <section class="container mx-auto px-4">
        <slot />
      </section>
    </main>
    <style is:global></style>
  </body>
</html>
