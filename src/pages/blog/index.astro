---
import { getCollection } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import Link from "../../components/Link.astro";
import Utan from "../../components/Utan.astro";
import TagList from "../../components/TagList.astro";

const allBlogPosts = await getCollection("blog");
---

<Layout title="^utan blog">
  <h1 class="mb-8 text-4xl">
    <Utan>^blog</Utan>
  </h1>

  <ul class="flex flex-col gap-4">
    {
      allBlogPosts.map((post) => (
        <li class="flex flex-col gap-1 rounded bg-nord-5 p-4 shadow-md dark:bg-nord-1 dark:shadow-nord-0">
          <Link url={`/blog/${post.slug}`} transition:name={post.data.title}>
            {post.data.title}
          </Link>
          <TagList
            tags={post.data.tags}
            transition:name={post.data.title + "-" + post.data.tags.join(":")}
          />
        </li>
      ))
    }
  </ul>
</Layout>

