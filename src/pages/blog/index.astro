---
import { getCollection } from "astro:content";

import Layout from "../../layouts/Layout.astro";
import Link from "../../components/Link.astro";
import Utan from "../../components/Utan.astro";
import TagList from "../../components/TagList.astro";

const allBlogPosts = await getCollection("blog");
---

<Layout title="^utan blog">
  <h1 class="mb-8 text-4xl">
    <Utan>^blog</Utan>
  </h1>

  <ul class="flex flex-col gap-4">
    {
      allBlogPosts.map((post) => (
        <li class="bg-nord-5 dark:bg-nord-1 dark:shadow-nord-0 flex flex-col gap-1 rounded p-4 shadow-md">
          <Link url={`/blog/${post.slug}`}>{post.data.title}</Link>
          <TagList tags={post.data.tags} />
        </li>
      ))
    }
  </ul>
</Layout>

